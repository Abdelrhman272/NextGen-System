<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== التسلسلات الرقمية ========== -->
    <record id="sequence_fish_breeding_cycle" model="ir.sequence">
        <field name="name">Fish Breeding Cycle</field>
        <field name="code">fish.breeding.cycle</field>
        <field name="prefix">CYC/</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="company_id" eval="False"/>
    </record>
    
    <record id="sequence_fish_harvest" model="ir.sequence">
        <field name="name">Fish Harvest</field>
        <field name="code">fish.harvest</field>
        <field name="prefix">HAR/</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- ========== أنواع الحركات المخزنية ========== -->
    <record id="picking_type_harvest" model="stock.picking.type">
        <field name="name">Harvest Transfer</field>
        <field name="code">internal</field>
        <field name="sequence_code">HAR</field>
        <field name="default_location_src_id" ref="stock.stock_location_locations"/>
        <field name="default_location_dest_id" ref="stock.stock_location_stock"/>
        <field name="show_operations" eval="True"/>
        <field name="use_create_lots" eval="False"/>
        <field name="use_existing_lots" eval="True"/>
    </record>

    <!-- ========== مجموعات المنتجات الأساسية ========== -->
    <record id="product_category_fish" model="product.category">
        <field name="name">Fish Products</field>
        <field name="parent_id" ref="product.product_category_all"/>
    </record>

    <!-- ========== أنواع الأسماك الافتراضية ========== -->
    <record id="fish_type_tilapia" model="fish.type">
        <field name="name">Tilapia</field>
        <field name="code">TIL</field>
        <field name="growth_period" eval="180"/> <!-- 180 يوم -->
        <field name="feed_conversion_ratio" eval="1.5"/> <!-- 1.5 كجم علف لكل 1 كجم سمك -->
        <field name="average_weight" eval="0.5"/> <!-- متوسط الوزن 0.5 كجم -->
    </record>

    <!-- ========== حسابات تحليلية أساسية ========== -->
    <record id="analytic_account_farm" model="account.analytic.account">
        <field name="name">Fish Farm Analytics</field>
        <field name="code">FARM</field>
        <field name="plan_id" ref="analytic.analytic_plan_projects"/>
    </record>
</odoo>