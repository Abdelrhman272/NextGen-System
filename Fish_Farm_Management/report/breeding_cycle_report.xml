<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="breeding_cycle_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2 class="text-center" data-i18n="Breeding Cycle Report">Breeding Cycle Report</h2>
                    <h4 class="text-center" t-esc="doc.name"/>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <p><strong data-i18n="Pond">Pond</strong>: <span t-esc="doc.pond_id.name"/></p>
                            <p><strong data-i18n="Fish Type">Fish Type</strong>: <span t-esc="doc.fish_type_id.name"/></p>
                            <p><strong data-i18n="Start Date">Start Date</strong>: <span t-esc="doc.start_date"/></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong data-i18n="End Date">End Date</strong>: <span t-esc="doc.end_date or 'Ongoing'"/></p>
                            <p><strong data-i18n="Duration">Duration</strong>: <span t-esc="doc.duration or 'N/A'"/> <span data-i18n="days">days</span></p>
                            <p><strong data-i18n="Status">Status</strong>: <span t-esc="doc.state"/></p>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h4 data-i18n="Stock Information">Stock Information</h4>
                            <table class="table table-bordered">
                                <tr>
                                    <td data-i18n="Initial Stock">Initial Stock</td>
                                    <td t-esc="doc.initial_stock"/>
                                </tr>
                                <tr>
                                    <td data-i18n="Total Harvested">Total Harvested</td>
                                    <td t-esc="doc.total_harvested"/> <span data-i18n="kg">kg</span>
                                </tr>
                                <tr>
                                    <td data-i18n="Feed Consumption">Feed Consumption</td>
                                    <td t-esc="doc.feed_consumption"/> <span data-i18n="kg">kg</span>
                                </tr>
                                <tr>
                                    <td data-i18n="Mortality Rate">Mortality Rate</td>
                                    <td t-esc="doc.mortality_rate"/>%
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h4 data-i18n="Cost Summary">Cost Summary</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th data-i18n="Cost Type">Cost Type</th>
                                        <th data-i18n="Amount">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.cost_ids" t-as="cost">
                                        <tr>
                                            <td t-esc="cost.cost_type"/>
                                            <td t-esc="cost.amount"/>
                                        </tr>
                                    </t>
                                    <tr class="font-weight-bold">
                                        <td data-i18n="Total Cost">Total Cost</td>
                                        <td t-esc="doc.total_cost"/>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12 text-right">
                            <p><strong data-i18n="Report Date">Report Date</strong>: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>