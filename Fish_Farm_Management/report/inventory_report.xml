<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inventory_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2 class="text-center" data-i18n="Farm Inventory Report">Farm Inventory Report</h2>
                    <h4 class="text-center" t-esc="doc.name"/>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h4 data-i18n="Ponds Summary">Ponds Summary</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th data-i18n="Pond">Pond</th>
                                        <th data-i18n="Status">Status</th>
                                        <th data-i18n="Fish Type">Fish Type</th>
                                        <th data-i18n="Current Stock">Current Stock</th>
                                        <th data-i18n="Estimated Harvest">Estimated Harvest</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.sector_ids" t-as="sector">
                                        <t t-foreach="sector.segment_ids" t-as="segment">
                                            <t t-foreach="segment.pond_ids" t-as="pond">
                                                <tr>
                                                    <td t-esc="pond.name"/>
                                                    <td t-esc="pond.state"/>
                                                    <td>
                                                        <t t-foreach="pond.fish_type_ids" t-as="fish_type">
                                                            <span t-esc="fish_type.name"/>
                                                            <t t-if="fish_type_index != len(pond.fish_type_ids)-1">, </t>
                                                        </t>
                                                    </td>
                                                    <td t-esc="pond.current_cycle_id.initial_stock if pond.current_cycle_id else 0"/>
                                                    <td t-esc="pond.current_cycle_id.estimated_harvest_date if pond.current_cycle_id else ''"/>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h4 data-i18n="Stock Levels">Stock Levels</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th data-i18n="Product">Product</th>
                                        <th data-i18n="On Hand">On Hand</th>
                                        <th data-i18n="Reserved">Reserved</th>
                                        <th data-i18n="Available">Available</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="inventory_data" t-as="product">
                                        <tr>
                                            <td t-esc="product['name']"/>
                                            <td t-esc="product['qty_available']"/>
                                            <td t-esc="product['outgoing_qty']"/>
                                            <td t-esc="product['free_qty']"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-12 text-right">
                            <p><strong data-i18n="Report Date">Report Date</strong>: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>