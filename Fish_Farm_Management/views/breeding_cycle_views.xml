<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_breeding_cycle_tree" model="ir.ui.view">
        <field name="name">breeding.cycle.tree</field>
        <field name="model">fish.breeding.cycle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pond_id"/>
                <field name="fish_type_id"/>
                <field name="start_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_breeding_cycle_form" model="ir.ui.view">
        <field name="name">breeding.cycle.form</field>
        <field name="model">fish.breeding.cycle</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="pond_id"/>
                            <field name="fish_type_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="estimated_harvest_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="initial_stock"/>
                            <field name="feed_consumption"/>
                            <field name="mortality_rate"/>
                        </page>
                        <page string="Costs">
                            <field name="cost_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="cost_type"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Harvests">
                            <field name="harvest_ids">
                                <tree>
                                    <field name="harvest_date"/>
                                    <field name="quantity"/>
                                    <field name="quality"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>