<odoo>
    <record id="view_fish_pond_tree" model="ir.ui.view">
        <field name="name">fish.farm.pond.tree</field>
        <field name="model">fish.farm.pond</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="unit_id"/>
                <field name="fish_type"/>
            </list>
        </field>
    </record>

    <record id="view_fish_pond_form" model="ir.ui.view">
        <field name="name">fish.farm.pond.form</field>
        <field name="model">fish.farm.pond</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="unit_id"/>
                        <field name="volume"/>
                        <field name="fish_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>