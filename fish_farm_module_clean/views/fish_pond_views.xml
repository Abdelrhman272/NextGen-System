<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_fish_farm_pond_tree" model="ir.ui.view">
    <field name="name">fish.farm.pond.tree</field>
    <field name="model">fish.farm.pond</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    
    </field>
  </record>

  <record id="view_fish_farm_pond_form" model="ir.ui.view">
    <field name="name">fish.farm.pond.form</field>
    <field name="model">fish.farm.pond</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fish_farm_pond" model="ir.actions.act_window">
    <field name="name">Fish Pond</field>
    <field name="res_model">fish.farm.pond</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_fish_farm_pond" name="Fish Pond" parent="menu_fish_farm_main" action="action_fish_farm_pond"/>
</odoo>
