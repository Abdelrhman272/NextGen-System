<odoo>
    <record id="view_fish_farm_settings_form" model="ir.ui.view">
        <field name="name">fish.farm.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="Fish Farm Settings" string="Fish Farm Settings">
                    <h2>Fish Farm Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label>Default Pond Capacity (KG)</label>
                                <field name="default_pond_capacity_kg"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label>Enable Feeding Notifications</label>
                                <field name="feeding_alert_enabled"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>