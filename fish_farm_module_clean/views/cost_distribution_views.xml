<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cost_distribution_tree" model="ir.ui.view">
        <field name="name">cost.distribution.tree</field>
        <field name="model">fish.cost.distribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="name"/>
                <field name="pond_id"/>
                <field name="cycle_id"/>
                <field name="cost_type"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="view_cost_distribution_form" model="ir.ui.view">
        <field name="name">cost.distribution.form</field>
        <field name="model">fish.cost.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="cycle_id"/>
                        </group>
                        <group>
                            <field name="cost_type"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <field name="note"/>
                    <field name="account_move_id" readonly="1"/>
                </sheet>
                <footer>
                    <button name="action_create_journal_entry" type="object" string="Create Journal Entry" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>