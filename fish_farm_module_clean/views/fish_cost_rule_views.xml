<odoo>
    <record id="view_fish_cost_rule_tree" model="ir.ui.view">
        <field name="name">fish.farm.cost.rule.tree</field>
        <field name="model">fish.farm.cost.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="cost_type"/>
                <field name="distribution_percentage"/>
            </list>
        </field>
    </record>

    <record id="view_fish_cost_rule_form" model="ir.ui.view">
        <field name="name">fish.farm.cost.rule.form</field>
        <field name="model">fish.farm.cost.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cost_type"/>
                        <field name="distribution_percentage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>