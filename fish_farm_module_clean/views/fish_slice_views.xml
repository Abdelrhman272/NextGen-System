<odoo>
  <record id="view_fish_farm_slice_tree" model="ir.ui.view">
    <field name="name">fish.farm.slice.tree</field>
    <field name="model">fish.farm.slice</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record id="view_fish_farm_slice_form" model="ir.ui.view">
    <field name="name">fish.farm.slice.form</field>
    <field name="model">fish.farm.slice</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fish_farm_slice" model="ir.actions.act_window">
    <field name="name">Fish Slice</field>
    <field name="res_model">fish.farm.slice</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_fish_farm_slice" name="Fish Slice" parent="menu_fish_farm_main" action="action_fish_farm_slice"/>
</odoo>
