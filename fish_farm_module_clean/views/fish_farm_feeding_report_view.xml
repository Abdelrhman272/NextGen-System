<odoo>
    <record id="view_fish_farm_feeding_report_tree" model="ir.ui.view">
        <field name="name">fish.farm.feeding.report.tree</field>
        <field name="model">fish.farm.feeding</field>
        <field name="arch" type="xml">
            <list string="Feeding Report">
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="feed_type"/>
                <field name="quantity_kg"/>
            </list>
        </field>
    </record>

    <record id="action_fish_farm_feeding_report" model="ir.actions.act_window">
        <field name="name">Feeding Report</field>
        <field name="res_model">fish.farm.feeding</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_fish_farm_feeding_report_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No feeding data available.</p>
        </field>
    <field name="context">{'create': False}</field></record>

    <menuitem id="menu_fishfarm_feeding_report" name="Feeding Report" parent="menu_fishfarm_report_root" action="action_fish_farm_feeding_report"/>
<record id="view_fish_farm_feeding_report_search" model="ir.ui.view">
            <field name="name">fish.farm.feeding.report.search</field>
            <field name="model">fish.farm.feeding</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date"/>
                    <field name="feed_type"/>
                    <field name="pond_id"/>
                </search>
            </field>
        </record></odoo>
