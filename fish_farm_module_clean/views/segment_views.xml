<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fish_farm_segment_tree" model="ir.ui.view">
        <field name="name">fish.farm.segment.tree</field>
        <field name="model">fish.farm.segment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sector_id"/>
                <field name="farm_id"/>
                <field name="area"/>
            </tree>
        </field>
    </record>

    <record id="view_fish_farm_segment_form" model="ir.ui.view">
        <field name="name">fish.farm.segment.form</field>
        <field name="model">fish.farm.segment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sector_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="area"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ponds">
                            <field name="pond_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="area"/>
                                    <field name="depth"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>