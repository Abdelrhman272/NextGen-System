<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fish_farm_tree" model="ir.ui.view">
        <field name="name">fish.farm.tree</field>
        <field name="model">fish.farm</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="location"/>
                <field name="total_area"/>
            </tree>
        </field>
    </record>

    <record id="view_fish_farm_form" model="ir.ui.view">
        <field name="name">fish.farm.form</field>
        <field name="model">fish.farm</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sectors">
                            <field name="sector_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>