<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- الإجراءات الرئيسية -->
    <record id="action_fish_farm" model="ir.actions.act_window">
        <field name="name">Fish Farms</field>
        <field name="res_model">fish.farm</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_fish_farm_tree"/>
    </record>

    <record id="action_fish_pond" model="ir.actions.act_window">
        <field name="name">Fish Ponds</field>
        <field name="res_model">fish.pond</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_breeding_cycle" model="ir.actions.act_window">
        <field name="name">Breeding Cycles</field>
        <field name="res_model">fish.breeding.cycle</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="view_fish_farm_tree" model="ir.ui.view">
        <field name="name">fish.farm.tree</field>
        <field name="model">fish.farm</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="location"/>
                <field name="total_area"/>
            </tree>
        </field>
    </record>

    <record id="view_fish_farm_form" model="ir.ui.view">
        <field name="name">fish.farm.form</field>
        <field name="model">fish.farm</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sectors">
                            <field name="sector_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>