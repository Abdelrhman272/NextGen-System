<odoo>
    <record id="view_fish_expense_tree" model="ir.ui.view">
        <field name="name">fish.farm.expense.tree</field>
        <field name="model">fish.farm.expense</field>
        <field name="arch" type="xml">
            <list>
                <field name="pond_id"/>
                <field name="expense_type"/>
                <field name="amount"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_fish_expense_form" model="ir.ui.view">
        <field name="name">fish.farm.expense.form</field>
        <field name="model">fish.farm.expense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="pond_id"/>
                        <field name="expense_type"/>
                        <field name="amount"/>
                        <field name="date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>