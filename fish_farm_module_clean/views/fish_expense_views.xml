<odoo>
  <record id="view_fish_farm_expense_tree" model="ir.ui.view">
    <field name="name">fish.farm.expense.tree</field>
    <field name="model">fish.farm.expense</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="view_fish_farm_expense_form" model="ir.ui.view">
    <field name="name">fish.farm.expense.form</field>
    <field name="model">fish.farm.expense</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fish_farm_expense" model="ir.actions.act_window">
    <field name="name">Expenses</field>
    <field name="res_model">fish.farm.expense</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_fish_farm_expense" parent="menu_fish_farm_main" action="action_fish_farm_expense" sequence="10"/>
</odoo>
