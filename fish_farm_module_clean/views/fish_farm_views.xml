<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <data><record id="view_sector_tree" model="ir.ui.view">
        <field name="name">fish.farm.sector.tree</field>
        <field name="model">fish.farm.sector</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="view_sector_form" model="ir.ui.view">
        <field name="name">fish.farm.sector.form</field>
        <field name="model">fish.farm.sector</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="notes"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_sector" model="ir.actions.act_window">
        <field name="name">Sectors</field>
        <field name="res_model">fish.farm.sector</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fishfarm_root" name="Fish Farm"/>
    <menuitem id="menu_fishfarm_report_root" name="Reports" parent="menu_fishfarm_root"/>

    <menuitem id="menu_fishfarm_sector" name="Sectors" parent="menu_fishfarm_root" action="action_sector"/>

    <record id="view_zone_tree" model="ir.ui.view">
        <field name="name">fish.farm.zone.tree</field>
        <field name="model">fish.farm.zone</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="sector_id"/>
            </list>
        </field>
    </record>

    <record id="view_zone_form" model="ir.ui.view">
        <field name="name">fish.farm.zone.form</field>
        <field name="model">fish.farm.zone</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sector_id"/>
                    <field name="notes"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_zone" model="ir.actions.act_window">
        <field name="name">Zones</field>
        <field name="res_model">fish.farm.zone</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fishfarm_zone" name="Zones" parent="menu_fishfarm_root" action="action_zone"/>

    <record id="view_pond_tree" model="ir.ui.view">
        <field name="name">fish.farm.pond.tree</field>
        <field name="model">fish.farm.pond</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="capacity_kg"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_pond_form" model="ir.ui.view">
        <field name="name">fish.farm.pond.form</field>
        <field name="model">fish.farm.pond</field>
        <field><form string="Pond">
                <header>
                    <button name="%(action_fish_farm_fishing)d" string="Fishing" type="action" class="btn-primary"/>
                    <button name="%(action_fish_farm_supplying)d" string="Supplying" type="action" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" placeholder="Enter Pond Name" help="Unique name for this pond"/>
                        <field name="zone_id"/>
                        <field name="sector_id"/>
                        <field name="capacity_kg" help="Maximum weight the pond can hold (KG)"/>
                        <field name="active"/>
                    </group>
                    <group string="Smart Stats">
                        <field name="feeding_count" widget="statinfo" string="Feeding Ops"/>
                        <field name="fishing_count" widget="statinfo" string="Fishing Ops"/>
                        <field name="supplying_count" widget="statinfo" string="Supplying Ops"/>
                    </group>
                </sheet>
            </form></field></record>

    <record id="action_pond" model="ir.actions.act_window">
        <field name="name">Ponds</field>
        <field name="res_model">fish.farm.pond</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fishfarm_pond" name="Ponds" parent="menu_fishfarm_root" action="action_pond"/>

    <record id="view_seed_tree" model="ir.ui.view">
        <field name="name">fish.farm.seed.tree</field>
        <field name="model">fish.farm.seed</field>
        <field><form string="Seed Entry">
                    <sheet>
                        
            <group>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
    <record id="view_seed_tree" model="ir.ui.view">
        <field name="name">fish.farm.seed.tree</field>
        <field name="model">fish.farm.seed</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="quantity_kg"/>
            </list>
        </field>
    </record>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="quantity_kg" help="Weight of seed added (KG)"/>
            </group>
        
                    </sheet>
                </form></field></record>

    <record id="action_seed" model="ir.actions.act_window">
        <field name="name">Seeds</field>
        <field name="res_model">fish.farm.seed</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fishfarm_seed" name="Seeds" parent="menu_fishfarm_root" action="action_seed"/>
    
    <record id="view_feeding_tree" model="ir.ui.view">
        <field name="name">fish.farm.feeding.tree</field>
        <field name="model">fish.farm.feeding</field>
        <field><form string="Feeding Entry">
                    <sheet>
                        
            <group>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="feed_type"/>
                <field name="quantity_kg" help="Amount of feed used (KG)"/>
    <record id="view_feeding_tree" model="ir.ui.view">
        <field name="name">fish.farm.feeding.tree</field>
        <field name="model">fish.farm.feeding</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="feed_type"/>
                <field name="quantity_kg"/>
            </list>
        </field>
    </record>
                <field name="quantity_kg" help="Amount of feed used (KG)"/>
            </group>
        
                    </sheet>
                </form></field></record>

    <record id="action_feeding" model="ir.actions.act_window">
        <field name="name">Feedings</field>
        <field name="res_model">fish.farm.feeding</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_fishfarm_feeding" name="Feedings" parent="menu_fishfarm_root" action="action_feeding"/>

    <record id="view_fishing_tree" model="ir.ui.view">
        <field name="name">fish.farm.fishing.tree</field>
        <field name="model">fish.farm.fishing</field>
        <field><form string="Fishing Entry">
                    <sheet>
                        
            <group>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="quantity_kg" help="Quantity of fish caught (KG)"/>
            </group>
        
                    </sheet>
                </form></field></record>
    <record id="view_fishing_tree" model="ir.ui.view">
        <field name="name">fish.farm.fishing.tree</field>
        <field name="model">fish.farm.fishing</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="pond_id"/>
                <field name="zone_id"/>
                <field name="sector_id"/>
                <field name="quantity_kg"/>
            </list>
        </field>
    </record>
                </data>
</odoo>
