<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fish_farm_dashboard" model="ir.ui.view">
        <field name="name">fish.farm.dashboard</field>
        <field name="model">fish.farm.dashboard</field>
        <field name="arch" type="xml">
            <form string="Fish Farm Dashboard">
                <sheet>
                    <h1>Welcome to the Fish Farm Dashboard</h1>
                    <div class="row">
                        <div class="col-6">
                            <field name="pond_count" readonly="1"/>
                            <field name="total_feed" readonly="1"/>
                        </div>
                        <div class="col-6">
                            <field name="total_fish_caught" readonly="1"/>
                            <field name="last_update" readonly="1"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fish_farm_dashboard" model="ir.actions.act_window">
        <field name="name">Fish Farm Dashboard</field>
        <field name="res_model">fish.farm.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_fishfarm_dashboard"
              name="Dashboard"
              parent="fish_farm_module_clean.menu_fishfarm_root"
              action="action_fish_farm_dashboard"
              sequence="1"/>
</odoo>
