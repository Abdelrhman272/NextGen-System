<odoo>
    <record id="view_fish_farm_daily_report_tree" model="ir.ui.view">
        <field name="name">fish.farm.daily.report.tree</field>
        <field name="model">fish.farm.feeding</field>
        <field name="arch" type="xml">
            <list string="Daily Activity Report">
                <field name="date"/>
                <field name="pond_id"/>
                <field name="feed_type"/>
                <field name="quantity_kg"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="action_fish_farm_daily_report" model="ir.actions.act_window">
        <field name="name">Daily Activity Report</field>
        <field name="res_model">fish.farm.feeding</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_fish_farm_daily_report_tree"/>
    <field name="context">{'create': False}</field></record>

    <menuitem id="menu_fishfarm_daily_report" name="Daily Report" parent="menu_fishfarm_report_root" action="action_fish_farm_daily_report"/>
<record id="view_fish_farm_daily_report_search" model="ir.ui.view">
            <field name="name">fish.farm.daily.report.search</field>
            <field name="model">fish.farm.seed</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date"/>
                    <field name="pond_id"/>
                    <field name="sector_id"/>
                </search>
            </field>
        </record></odoo>
