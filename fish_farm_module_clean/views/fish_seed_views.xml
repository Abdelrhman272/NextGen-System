<odoo>
    <record id="view_fish_seed_tree" model="ir.ui.view">
        <field name="name">fish.farm.seed.tree</field>
        <field name="model">fish.farm.seed</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pond_id"/>
                <field name="fish_type"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <record id="view_fish_seed_form" model="ir.ui.view">
        <field name="name">fish.farm.seed.form</field>
        <field name="model">fish.farm.seed</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="pond_id"/>
                        <field name="fish_type"/>
                        <field name="quantity"/>
                        <field name="received_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>