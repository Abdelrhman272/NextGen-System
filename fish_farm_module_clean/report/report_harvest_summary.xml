<odoo>
    <template id="report_fish_harvest_summary">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>تقرير الصيد - <t t-esc="doc.name"/></h2>
                    <p>الفترة: <t t-esc="data['form']['date_from']"/> إلى <t t-esc="data['form']['date_to']"/></p>
                    <!-- تفاصيل الصيد ستضاف لاحقًا -->
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_fish_harvest_summary"
        string="تقرير الصيد"
        model="fish.farm.pond"
        report_type="qweb-pdf"
        name="fish_farm_module_clean.report_fish_harvest_summary"
        file="fish_farm_module_clean.report_fish_harvest_summary"
        print_report_name="'تقرير الصيد - %s' % (object.name)"
    />
</odoo>