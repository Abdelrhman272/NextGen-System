<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_feeding_pdf_template">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Feeding Report</h2>
        <table class="table table-sm table-bordered">
          <thead>
            <tr>
              <th>Date</th>
              <th>Pond</th>
              <th>Zone</th>
              <th>Sector</th>
              <th>Feed Type</th>
              <th>Quantity (kg)</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="docs" t-as="line">
              <tr>
                <td><t t-esc="line.date"/></td>
                <td><t t-esc="line.pond_id.name"/></td>
                <td><t t-esc="line.zone_id.name"/></td>
                <td><t t-esc="line.sector_id.name"/></td>
                <td><t t-esc="line.feed_type"/></td>
                <td><t t-esc="line.quantity_kg"/></td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>
