<odoo>
  <template id="report_fish_feeding_document">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Fish Feeding Report</h2>
        <p>Feed Date: <t t-esc="doc.feed_date"/></p>
        <p>Pond: <t t-esc="doc.pond_id.name"/></p>
        <p>Quantity (kg): <t t-esc="doc.quantity"/></p>
        <p>Feed Type: <t t-esc="doc.feed_type"/></p>
      </div>
    </t>
  </template>

  <record id="report_fish_feeding" model="ir.actions.report">
    <field name="name">Fish Feeding Report</field>
    <field name="model">fish.farm.feed</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">fish_farm_module_clean.report_fish_feeding_document</field>
    <field name="file">fish_farm_module_clean.report_fish_feeding_document</field>
    <field name="print_report_name">'Fish Feeding Report - %s' % (object.feed_date)</field>
  </record>
</odoo>
