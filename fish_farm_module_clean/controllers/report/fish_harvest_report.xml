<odoo>
  <template id="report_fish_harvest_document">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Fish Harvest Report</h2>
        <p>Date: <t t-esc="doc.harvest_date"/></p>
        <p>Pond: <t t-esc="doc.pond_id.name"/></p>
        <p>Quantity (kg): <t t-esc="doc.quantity"/></p>
        <p>Notes: <t t-esc="doc.note"/></p>
      </div>
    </t>
  </template>

  <record id="report_fish_harvest" model="ir.actions.report">
    <field name="name">Fish Harvest Report</field>
    <field name="model">fish.farm.harvest</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">fish_farm_module_clean.report_fish_harvest_document</field>
    <field name="file">fish_farm_module_clean.report_fish_harvest_document</field>
    <field name="print_report_name">'Harvest - %s' % (object.pond_id.name)</field>
  </record>
</odoo>
