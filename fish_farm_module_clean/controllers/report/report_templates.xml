<odoo>
  <template id="report_fish_seed_document">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Fish Seed Report</h2>
        <p>Batch Reference: <t t-esc="doc.name"/></p>
        <p>Pond: <t t-esc="doc.pond_id.name"/></p>
        <p>Seeding Date: <t t-esc="doc.seed_date"/></p>
        <p>Quantity (kg): <t t-esc="doc.quantity"/></p>
        <p>Fish Type: <t t-esc="doc.fish_type"/></p>
      </div>
    </t>
  </template>

  <record id="report_fish_seed" model="ir.actions.report">
    <field name="name">Fish Seed Report</field>
    <field name="model">fish.farm.seed</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">fish_farm_module_clean.report_fish_seed_document</field>
    <field name="file">fish_farm_module_clean.report_fish_seed_document</field>
    <field name="print_report_name">'Fish Seed Report - %s' % (object.name)</field>
  </record>
</odoo>
