<odoo>
  <record id="view_fish_farm_cost_rule_tree" model="ir.ui.view">
    <field name="name">fish.farm.cost.rule.tree</field>
    <field name="model">fish.farm.cost.rule</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="view_fish_farm_cost_rule_form" model="ir.ui.view">
    <field name="name">fish.farm.cost.rule.form</field>
    <field name="model">fish.farm.cost.rule</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fish_farm_cost_rule" model="ir.actions.act_window">
    <field name="name">Cost Rules</field>
    <field name="res_model">fish.farm.cost.rule</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_fish_farm_cost_rule" parent="menu_fish_farm_main" action="action_fish_farm_cost_rule" sequence="10"/>
</odoo>
