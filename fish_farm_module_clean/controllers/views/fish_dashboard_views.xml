<odoo>
  <template id="fish_dashboard_template" name="Fish Farm Dashboard">
    <t t-call="web.layout">
      <div class="oe_structure">
        <div class="container">
          <h2>Fish Farm Dashboard</h2>

          <!-- KPIs -->
          <div class="row mb-3">
            <div class="col-3">
              <div class="alert alert-primary text-center">
                <h4>Total Ponds</h4>
                <t t-esc="pond_count"/>
              </div>
            </div>
            <div class="col-3">
              <div class="alert alert-success text-center">
                <h4>Total Feed (kg)</h4>
                <t t-esc="total_feed"/>
              </div>
            </div>
            <div class="col-3">
              <div class="alert alert-info text-center">
                <h4>Total Harvest (kg)</h4>
                <t t-esc="total_harvest"/>
              </div>
            </div>
          </div>

          <!-- Charts -->
          <div class="row">
            <div class="col-6">
              <canvas id="feedChart"></canvas>
            </div>
            <div class="col-6">
              <canvas id="harvestChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <script>
        // Feed Chart JS
        var ctx1 = document.getElementById('feedChart').getContext('2d');
        new Chart(ctx1, {
          type: 'bar',
          data: {
            labels: [[t-esc="feed_chart_labels"]],
            datasets: [{
              label: 'Feeding per Pond',
              data: [[t-esc="feed_chart_data"]],
              backgroundColor: 'rgba(54, 162, 235, 0.5)'
            }]
          }
        });

        // Harvest Chart JS
        var ctx2 = document.getElementById('harvestChart').getContext('2d');
        new Chart(ctx2, {
          type: 'pie',
          data: {
            labels: [[t-esc="harvest_chart_labels"]],
            datasets: [{
              data: [[t-esc="harvest_chart_data"]],
              backgroundColor: ['#ff6384','#36a2eb','#cc65fe','#ffce56']
            }]
          }
        });
      </script>
    </t>
  </template>

  <record id="action_fish_dashboard" model="ir.actions.client">
    <field name="name">Dashboard</field>
    <field name="tag">fish_dashboard</field>
  </record>
</odoo>
