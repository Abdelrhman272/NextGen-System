            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Rule for Segment -->
        <record id="fish_segment_rule_user" model="ir.rule">
            <field name="name">Segments: User Access</field>
            <field name="model_id" ref="model_fish_farm_segment"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Rule for Harvest -->
        <record id="fish_harvest_rule_user" model="ir.rule">
            <field name="name">Harvests: User Access</field>
            <field name="model_id" ref="model_fish_farm_harvest"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
