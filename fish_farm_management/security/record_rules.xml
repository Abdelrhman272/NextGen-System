<odoo>
    <data noupdate="1">
        <!-- Rule for Fish Farm - Only see own company's farms -->
        <record id="fish_farm_rule_user" model="ir.rule">
            <field name="name">Fish Farms: User Access</field>
            <field name="model_id" ref="model_fish_farm"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Rule for Pond -->
        <record id="fish_pond_rule_user" model="ir.rule">
            <field name="name">Ponds: User Access</field>
