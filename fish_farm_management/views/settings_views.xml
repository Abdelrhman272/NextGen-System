<record id="res_config_settings_view_form_inherit_fish_farm" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.fish.farm</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">

        <!-- استخدم إعداد موجود فعليًا كنقطة إدخال -->
        <xpath expr="//setting[@id='base_setup.setting_company_registry']" position="after">

            <!-- إعدادات مزرعة الأسماك -->
            <setting string="Fish Farm Default Feed Product"
                     id="fish_farm.default_feed_product_id"
                     help="Default feed product for ponds">
                <field name="default_feed_product_id"/>
            </setting>

            <setting string="Fish Farm Default Medicine Product"
                     id="fish_farm.default_medicine_product_id"
                     help="Default medicine product for treatments">
                <field name="default_medicine_product_id"/>
            </setting>

            <setting string="Harvest Committee Size"
                     id="fish_farm.harvest_committee_size"
                     help="Default number of members in harvest committee">
                <field name="harvest_committee_size"/>
            </setting>

            <setting string="Fish Farm Account Prefix"
                     id="fish_farm.fish_farm_analytic_account_prefix"
                     help="Prefix used for analytic accounts created by the system">
                <field name="fish_farm_analytic_account_prefix"/>
            </setting>

        </xpath>
    </field>
</record>
