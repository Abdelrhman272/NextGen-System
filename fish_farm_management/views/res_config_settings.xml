<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_fish_farm" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fish.farm</field>
        <field name="model">res.config.settings</field>
        <!-- We are inheriting from the standard base settings view -->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--
            FINAL ATTEMPT: This is the most robust XPath.
            Instead of looking for a specific settings block (like general_settings),
            we are looking for the main container ('settings_pane') that holds ALL blocks.
            We then add our block inside it. This should work on almost any Odoo setup.
            -->
            <xpath expr="//div[hasclass('settings_pane')]" position="inside">
                <div class="app_settings_block" data-string="Fish Farm" string="Fish Farm" data-key="fish_farm_management" groups="base.group_system">
                    <!-- The content of the settings page goes here, as provided before -->
                    <h2>Fish Farm Defaults</h2>
                    <div class="row mt16 o_settings_container">
                        <!-- Left Column -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="default_feed_product_id"/>
                                <div class="text-muted">
                                   Set the default product for fish feeding.
                                </div>
                                <div class="content-group">
                                    <field name="default_feed_product_id"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane mt16">
                                <label for="default_medicine_product_id"/>
                                <div class="text-muted">
                                   Set the default product for fish treatment.
                                </div>
                                <div class="content-group">
                                    <field name="default_medicine_product_id"/>
                                </div>
                            </div>
                        </div>
                        <!-- Right Column -->
                        <div class="col-12 col-lg-6 o_setting_box">
                           <div class="o_setting_right_pane">
                                <label for="default_income_account_id"/>
                                <div class="text-muted">
                                   Default account for farm income.
                                </div>
                                <div class="content-group">
                                    <field name="default_income_account_id"/>
                                </div>
                            </div>
                           <div class="o_setting_right_pane mt16">
                                <label for="default_expense_account_id"/>
                                <div class="text-muted">
                                   Default account for farm expenses.
                                </div>
                                <div class="content-group">
                                    <field name="default_expense_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ... other settings sections ... -->
                </div>
            </xpath>
        </field>
    </record>
</odoo>
