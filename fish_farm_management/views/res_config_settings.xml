<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_fish_farm" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fish.farm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- المكان الصحيح لإضافة إعدادات جديدة في Odoo 18 -->
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app_settings_block" data-string="Fish Farm Settings">
                    <h2>Fish Farm Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">

                            <setting string="Default Feed Product">
                                <field name="default_feed_product_id"/>
                            </setting>

                            <setting string="Default Medicine Product">
                                <field name="default_medicine_product_id"/>
                            </setting>

                            <setting string="Harvest Committee Size">
                                <field name="harvest_committee_size"/>
                            </setting>

                            <setting string="Analytic Account Prefix">
                                <field name="fish_farm_analytic_account_prefix"/>
                            </setting>

                            <setting string="Default Income Account">
                                <field name="default_income_account_id"/>
                            </setting>

                            <setting string="Default Expense Account">
                                <field name="default_expense_account_id"/>
                            </setting>

                            <setting string="Labor Cost per Hour">
                                <field name="labor_cost_per_hour"/>
                            </setting>

                            <setting string="Electricity Cost per kWh">
                                <field name="electricity_cost_per_kwh"/>
                            </setting>

                            <setting string="Enable API Integration">
                                <field name="enable_api_integration"/>
                            </setting>

                            <setting string="API Key">
                                <field name="api_key" password="True"/>
                            </setting>

                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>
