<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_harvest_sorting_list" model="ir.ui.view">
        <field name="name">harvest.sorting.tree</field>
        <field name="model">fish_farm_management.harvest_sorting</field>
        <field name="arch" type="xml">
            <list string="فرز الحصاد" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="harvest_record_id"/>
                <field name="sorting_date"/>
                <field name="input_weight"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <record id="view_harvest_sorting_form" model="ir.ui.view">
        <field name="name">harvest.sorting.form</field>
        <field name="model">fish_farm_management.harvest_sorting</field>
        <field name="arch" type="xml">
            <form string="فرز الحصاد">
                <header>
                    <button name="action_validate_sorting" type="object" string="تأكيد الفرز" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel_sorting" type="object" string="إلغاء الفرز" attrs="{'invisible': [('state', 'in', ('cancelled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(stock.action_picking_tree_all)d" type="action"
                                icon="fa-truck" context="{'default_origin': name}"
                                string="حركات المخزون" groups="stock.group_stock_user"/>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="harvest_record_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="sorting_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="input_weight" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="تفاصيل الفرز">
                            <field name="sorting_line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <list editable="bottom">
                                    <field name="product_id" domain="[('is_harvested_product', '=', True)]"/>
                                    <label for="sorted_weight"/>
                                    <div>
                                        <field name="sorted_weight" class="oe_inline"/>
                                        <field name="product_uom_id" class="oe_inline" attrs="{'readonly': [('product_id', '=', False)]}"/>
                                    </div>
                                    <field name="destination_location_id"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_fish_farm_harvest_sorting_view" model="ir.actions.act_window">
        <field name="name">فرز الحصاد</field>
        <field name="res_model">fish_farm_management.harvest_sorting</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>