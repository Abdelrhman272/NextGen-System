<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fish_type_list" model="ir.ui.view">
        <field name="name">fish.type.list</field>
        <field name="model">fish.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_id"/>
                <field name="growth_period"/>
                <field name="feed_conversion_ratio"/>
            </list>
        </field>
    </record>

    <record id="view_fish_type_form" model="ir.ui.view">
        <field name="name">fish.type.form</field>
        <field name="model">fish.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="growth_period"/>
                            <field name="feed_conversion_ratio"/>
                            <field name="average_weight"/>
                        </group>
                    </group>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>