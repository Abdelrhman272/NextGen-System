<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_harvest_record_tree" model="ir.ui.view">
        <field name="name">harvest.record.tree</field>
        <field name="model">fish_farm_management.harvest_record</field>
        <field name="arch" type="xml">
            <tree string="سجلات الحصاد" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="pond_id"/>
                <field name="fish_type_id"/> <field name="harvest_date"/>
                <field name="harvest_number"/>
                <field name="total_weight"/>
                <field name="state"/>
                <field name="harvest_committee_ids" widget="many2many_tags"/>
                <field name="batch_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_harvest_record_form" model="ir.ui.view">
        <field name="name">harvest.record.form</field>
        <field name="model">fish_farm_management.harvest_record</field>
        <field name="arch" type="xml">
            <form string="سجل حصاد">
                <header>
                    <button name="action_validate_harvest" type="object" string="تأكيد الحصاد" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel_harvest" type="object" string="إلغاء الحصاد" attrs="{'invisible': [('state', 'in', ('cancelled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(stock.action_view_stock_picking_request)d" type="action"
                                icon="fa-truck" attrs="{'invisible': [('stock_picking_id', '=', False)]}">
                            <field name="stock_picking_id" string="النقل المخزني" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" name="%(fish_farm_management.action_fish_farm_harvest_delivery_view)d" type="action"
                                icon="fa-truck" attrs="{'invisible': [('delivery_to_warehouse_id', '=', False)]}" context="{'default_harvest_record_id': active_id}">
                            <field name="delivery_to_warehouse_id" string="تسليم المخزن" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="pond_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="harvest_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="harvest_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="total_weight" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="harvest_committee_ids" widget="many2many_tags" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <group string="معلومات التتبع">
                        <field name="batch_id" readonly="1"/>
                        <field name="fish_type_id" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_fish_farm_harvest_record_view" model="ir.actions.act_window">
        <field name="name">سجلات الحصاد</field>
        <field name="res_model">fish_farm_management.harvest_record</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>