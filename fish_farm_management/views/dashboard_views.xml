<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- تعريف إجراء العميل -->
    <record id="action_fish_farm_dashboard" model="ir.actions.client">
        <field name="name">Fish Farm Dashboard</field>
        <field name="tag">fish_farm_dashboard</field>
        <field name="target">current</field>
    </record>

    <!-- تعريف قالب Owl Component -->
    <template id="fish_farm_dashboard_template" owl="1">
        <div class="o_content">
            <div class="container-fluid p-3">
                <h2 t-esc="props.title || 'Fish Farm Dashboard'"/>
                
                <div t-if="state.loading" class="text-center">
                    <i class="fa fa-refresh fa-spin"/> Loading...
                </div>
                
                <div t-else="" class="row mt-3">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Monthly Production</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="productionChart"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Pond Status</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="pondChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>