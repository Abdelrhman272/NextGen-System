<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pond_cost_tree" model="ir.ui.view">
        <field name="name">pond.cost.tree</field>
        <field name="model">fish_farm_management.pond_cost</field>
        <field name="arch" type="xml">
            <tree string="تكاليف الأحواض" decoration-success="state == 'posted'" decoration-danger="state == 'cancelled'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="pond_id"/>
                <field name="cost_date"/>
                <field name="cost_type_id"/>
                <field name="amount" widget="monetary" sum="Total Amount"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="is_direct_cost"/>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_pond_cost_form" model="ir.ui.view">
        <field name="name">pond.cost.form</field>
        <field name="model">fish_farm_management.pond_cost</field>
        <field name="arch" type="xml">
            <form string="إدخال تكلفة الحوض">
                <header>
                    <button name="action_post_cost" type="object" string="ترحيل التكلفة" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel_cost" type="object" string="إلغاء التكلفة" attrs="{'invisible': [('state', 'in', ('cancelled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="%(account.action_account_moves_all)d" type="action"
                                icon="fa-book" attrs="{'invisible': [('account_move_id', '=', False)]}">
                            <field name="account_move_id" string="قيد المحاسبة" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="pond_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cost_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cost_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary" options="{'currency_field': 'company_currency_id'}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="is_direct_cost" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="employee_id" attrs="{'invisible': [('is_direct_cost', '=', False)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <group string="الربط بالمستندات" attrs="{'invisible': ['|', ('purchase_order_id', '=', False), ('expense_sheet_id', '=', False)]}">
                        <field name="purchase_order_id" readonly="1"/>
                        <field name="expense_sheet_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_fish_farm_pond_cost_view" model="ir.actions.act_window">
        <field name="name">تكاليف الأحواض</field>
        <field name="res_model">fish_farm_management.pond_cost</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>