<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_cost_distribution" model="ir.actions.act_window">
        <field name="name">Cost Distributions</field>
        <field name="res_model">fish.cost.distribution</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_cost_distribution_list"/>
    </record>

    <record id="view_cost_distribution_list" model="ir.ui.view">
        <field name="name">cost.distribution.list</field>
        <field name="model">fish.cost.distribution</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="name"/>
                <field name="pond_id"/>
                <field name="cycle_id"/>
                <field name="cost_type"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="view_cost_distribution_form" model="ir.ui.view">
        <field name="name">cost.distribution.form</field>
        <field name="model">fish.cost.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="cycle_id"/>
                        </group>
                        <group>
                            <field name="cost_type"/>
                            <field name="amount"/>
                        </group>
                    </group>
                    <field name="note"/>
                    <field name="account_move_id" readonly="1"/>
                </sheet>
                <footer>
                    <button name="action_create_journal_entry" type="object" string="Create Journal Entry" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>