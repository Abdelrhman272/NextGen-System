<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fish_farm_sector_list" model="ir.ui.view">
        <field name="name">fish.farm.sector.list</field>
        <field name="model">fish.farm.sector</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="farm_id"/>
                <field name="area"/>
            </list>
        </field>
    </record>

    <record id="view_fish_farm_sector_form" model="ir.ui.view">
        <field name="name">fish.farm.sector.form</field>
        <field name="model">fish.farm.sector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="farm_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="area"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Segments">
                            <field name="segment_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="area"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>