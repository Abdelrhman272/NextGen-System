<?xml version="1.0" encoding="UTF-8"?>
<templates id="fish_farm_dashboard_assets" xml:space="preserve">
    <!-- التمبلِت الوحيد الذى يحتاجه الـ JS -->
    <t t-name="fish_farm_management.fish_farm_dashboard_template" owl="1">
        <div class="o_content">
            <div class="container-fluid p-3">
                <h2>Fish Farm Dashboard</h2>

                <div class="row mt-3">
                    <!-- بطاقة الإنتاج -->
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Monthly Production</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="productionChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>

                    <!-- بطاقة حالة الأحواض -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Pond Status</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="pondChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
