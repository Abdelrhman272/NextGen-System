<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="dashboard_template" name="Fish Farm OWL Dashboard">
        <t t-name="fish_farm_management.Dashboard" owl="1">
            <div class="container-fluid p-3">
                <h2>Fish Farm Dashboard</h2>
                
                <div t-if="state.loading" class="text-center">
                    <i class="fa fa-refresh fa-spin"/> Loading...
                </div>
                
                <div t-else="" class="row mt-3">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5>Monthly Production</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="productionChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Pond Status</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="pondChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
