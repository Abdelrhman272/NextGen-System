<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_harvest_wizard_form" model="ir.ui.view">
        <field name="name">harvest.wizard.form</field>
        <field name="model">fish.harvest.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cycle_id" readonly="1"/>
                        <field name="harvest_date"/>
                        <field name="quantity"/>
                        <field name="quality"/>
                    </group>
                    <field name="committee_member_ids" widget="many2many_tags"/>
                </sheet>
                <footer>
                    <button name="action_create_harvest" string="Create Harvest" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_harvest_wizard" model="ir.actions.act_window">
        <field name="name">Create Harvest</field>
        <field name="res_model">fish.harvest.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_cycle_id': active_id}</field>
    </record>
</odoo>